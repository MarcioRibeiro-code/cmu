<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Cmu" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Base application theme. -->
    <style name="Theme.Fitnessapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="Theme.Fitnessapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fitnessapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fitnessapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
